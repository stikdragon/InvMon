<InvMon>

    <Settings updatePeriod="1000" allowConversion="true" />

    <Modules>

        <PIP8048MAXParallelGroup id="invertergroup1">
            <FakeInverter id="invA" />
            <FakeInverter id="invB" />
        </PIP8048MAXParallelGroup>
    
        <!-- <ConsoleOutput id="console" controlCodes="false" /> -->  

        <!-- <TempHTMLOutput id="htmlout" target="junk\inv.html" /> -->

        <DataLogger id="datalogger" file="data\datalog.db" blockSize="400000" />

        <HTTPServer id="httpserver" port="8083" sourceData="invertergroup1">
        	<Page id="main" default="true">
                <Widget id="timeselector" class="timesel" layout="0, 0, 25, 1" />
                <Widget id="pvChart" class="chart" title="PV Power" layout="0, 1, 20, 7" cssClass="pv">
                    <Series field="PV_TOTAL_P" subfields="PVA_1_P, PVB_1_P, PVA_2_P, PVB_2_P" axis="y1" />
                    <Axis id="y1" min="0" formatter="%d W" />
                </Widget>
                <Widget id="pvTable" class="table" title="PV Power" layout="20, 1, 5, 5">
                    todo...
                </Widget>
                <Widget id="loadChart" class="chart" title="Load" layout="0, 8, 20, 7">
                    <Axis id="y1" min="0" formatter="%d W" />
                    <Series field="LOAD_P" subfields="LOAD_1_P, LOAD_2_P" />
                </Widget>
                <Widget id="batteryChart" class="chart" title="Battery" layout="0, 15, 20, 7">
                    <Axis id="y1" min="0" formatter="%.1f A" />
                    <Axis id="y2" min="35" max="65" formatter="%.1f V" />
                    <Series field="BATT_I_CHG" />
                    <Series field="BATT_I_DIS" />
                    <Series field="BATT_V" axis="y2" />                    
                </Widget>   
                <Widget id="busChart" class="chart" title="Bus/Temps" layout="0, 22, 20, 4">
                    <Axis id="y1" min="0" formatter="%.1f C" />
                    <Axis id="y2" min="0" formatter="%d V" />
                    <Series field="INV_1_TEMP" />
                    <Series field="INV_2_TEMP" />
                    <Series field="INV_1_BUS_V" axis="y2" />      
                </Widget>
                <Widget id="infobit" class="infobit" layout="0, 26, 20, 2">

                </Widget>



        	</Page>
        
        
        
        </HTTPServer>

        <JSONSend id="sender" destination="localhost" port="28347" key="turnips" user="user1___" logger="datalogger" />
    </Modules>

</InvMon>